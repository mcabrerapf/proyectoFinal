extends layout
block content

    .container.user-main
      .col-xs-6(style='border-right: 1px solid black;')
        div(style='border-bottom: 1px solid black')
          h4 
            b Name:
          p #{userById.name}
        div(style='border-bottom: 1px solid black')
          h4 
            b Instruments:
          each instrument in userById.instrument
            .user-sub-category #{instrument}
        div(style='border-bottom: 1px solid black')
          h4 
            b Genres:
          each genre in userById.genre
            .user-sub-category #{genre}
        div(style='border-bottom: 1px solid black')
          h4 
            b Material:
          each material in userById.material
            .user-sub-category #{material}
        div(style='border-bottom: 1px solid black')
          h4 
            b Bands:
          each band in userById.bands
            .user-sub-category #{band}
        div(style='border-bottom: 1px solid black')
          h4 
            b Studies:
          each study in userById.studies
            .user-sub-category #{study}
        button.btn.btn-success.btn-block(style='width: 95%; margin-top: 20px; margin-bottom: 20px; padding: 20px;') Let's Jam!!!
      .col-xs-6(style='text-align: center;')
        img#user-image(src='http://pawsnpups.com/wp-content/themes/PNP/images/breeds/Chug.jpeg', alt='Avatar')
        .col-xs-12.col-sm-6
          h4 
            b Local: 
          h4.user-sub-category #{userById.local}
        .col-xs-12.col-sm-6
          h4
            b Teacher:
          h4.user-sub-category #{userById.teacherAvailable}
        div(style='text-align: left; padding-left: 20%; margin-top: 120px')
          h4 
            b Description:
          p
            | #{userById.description}
          h4 
            b Audios:
          p #{userById.audios}
    .container(style='padding-top: 30px')
      h1 Comments
      if (user)
        form(action='/user/' + userById._id, method='post')
          textarea(rows='4', cols='40', name='comment' placeholder='Write a comment...')
          button.btn.btn-primary.btn-block(type='submit', style='width:80px') Submit
      for comment in userById.comments.reverse()
        #comments
            h4(style='border-bottom: 1px solid black') #{comment.username}
            p #{comment.comment}
   
